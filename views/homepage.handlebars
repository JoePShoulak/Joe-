<div class="menu-container">
  <div class="card-header col-md-12 text-center">
    <h2>
      Recent Posts
    </h2>
  </div>
  {{#each posts as |post|}}
    <div class="card col-md-12">
      <a href="/posts/{{post.id}}"><h3>{{post.title}}</h3></a>

      <span>-{{post.user.first_name}}
        {{post.user.last_name}},
        {{post.createdAt}}</span>

    </div>

  {{/each}}

</div>
<div class="menu-container">
  <div class="card-header col-md-12 text-center">
    <h2>
      Recent Posts
    </h2>
  </div>
  {{#each posts as |post|}}
  <div class="card col-md-12">
    <h3>Post</h3>
    <p>
      {{post.content}}
    </p>
    <span>Post made by user: {{post.user_id}}</span>
      {{#if post.comments}}
        <h4>Comments</h4>
        {{#each post.comments as |comment|}}
        <div class="card">

        <p>{{comment.content}}</p>
        <span>Comment made by user: {{comment.user_id}}</span>
        </div>
        {{/each}}
      {{/if}}
  </div>

  {{/each}}

</div>
